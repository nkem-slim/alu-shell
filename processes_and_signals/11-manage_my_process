#!/usr/bin/env bash
# This script manages the lifecycle of the manage_my_process script. It provides functions to start, stop, and restart the process, and stores the process ID in a PID file for tracking.


PID_FILE="/var/run/my_process.pid"

start_process() {
    echo "manage_my_process started"
    echo $$ > "$PID_FILE"
    # Add your process starting logic here
}

stop_process() {
    if [ -f "$PID_FILE" ]; then
        PID=$(cat "$PID_FILE")
        kill "$PID"
        rm -f "$PID_FILE"
        echo "manage_my_process stopped"
    else
        echo "manage_my_process is not running"
    fi
}

restart_process() {
    stop_process
    start_process
    echo "manage_my_process restarted"
}

case "$1" in
    start)
        start_process
        ;;
    stop)
        stop_process
        ;;
    restart)
        restart_process
        ;;
    *)
        echo "Usage: manage_my_process {start|stop|restart}"
        exit 1
        ;;
esac
